@page "/login"

<PageTitle>Login</PageTitle>

<h3>Login</h3>

<div>
    <label for="username">Usu치rio:</label>
    <input id="username" @bind="username" />
</div>

<div>
    <label for="password">Senha:</label>
    <input id="password" type="password" @bind="password" />
</div>

<button @onclick="OnLoginClicked">Entrar</button>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <p style="color: red;">@errorMessage</p>
}

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";

    private void OnLoginClicked()
    {
        if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password))
        {
            errorMessage = "Por favor, insira usu치rio e senha.";
            return;
        }

        // Simple hardcoded authentication
        if (username == "admin" && password == "password")
        {
            // Navigate to Home
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Usu치rio ou senha inv치lidos.";
        }
    }
}