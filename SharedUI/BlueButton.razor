<button class="blue-btn" @onclick="OnClick">
    @ButtonText
</button>

<style>
    .blue-btn {
        background-color: #007bff; /* Standard Blue */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }
    .blue-btn:hover {
        background-color: #0056b3;
    }
</style>

@code {
    [Parameter] public string ButtonText { get; set; } = "Click Me";
    [Parameter] public EventCallback OnClick { get; set; }
}